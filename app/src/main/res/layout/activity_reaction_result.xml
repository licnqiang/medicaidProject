<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.ReactionResultActivity">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/item_ll_backgroud_1"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/look_state_1"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/item_check_rrow" />

            <TextView
                android:id="@+id/item_title_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="基本信息" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_detail_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/detail_info_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gry_box_10dp"
                android:padding="10dp" />

        </LinearLayout>

        <include layout="@layout/common_item" />

    </LinearLayout>
</LinearLayout>